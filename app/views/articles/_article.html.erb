<% obj.each do |article| %>

<div class="container">

<div class="jumbotron py-3 mx-5">
  <h3 class="display-5"><%= link_to article.title, article_path(article) %></h3>
  <p class="lead"><%= truncate(article.description, length: 100) %></p>
  <hr class="my-3">
  <p><small>Created by: <%= article.user.username if article.user%>,

<%= time_ago_in_words(article.created_at) %> ago,

last updated: <%= time_ago_in_words(article.updated_at) %> ago</small></p>
 
 <% if logged_in? && current_user == article.user %>
 <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-sm btn-primary" %>

<%= link_to "Delete this article", article_path(article), method: :delete,

  data: { confirm: "Are you sure you want to delete the article?"},

  class: "btn btn-sm btn-danger" %>
  <% end %>

</div>
</div>



<% end %>